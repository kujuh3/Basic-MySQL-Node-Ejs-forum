<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>OT7</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <script src="//cdn.ckeditor.com/4.16.2/basic/ckeditor.js"></script>
</head>
<body>
    
    <div class="container">

    <div id="content">
        <div id="otsikko"><h2><%=sisalto.otsikko%></h2>
            <p>Keskustelun aloittaja: <%=sisalto.kirjoittaja%></p>
        </div>
        <div id="sisaltoteksti">
        <div id="sisalto" style="color:white;"><p><%- sisalto.sisalto %></p>
        </div>
    </div>
    <div id="kommenttiheader"><h5>Kommentit</h5></div>
            <% kommentit.forEach((kommentti) => { %>
                <div id="kommentti" style="color: white;">
                    <% 
                        let aika = new Date(kommentti.date);
                    %>
                    <div id="kommenttiinfo">
                    <p>Nimimerkki: <mark><%=kommentti.nimimerkki%></mark>
                    Päivämäärä: <mark><%=aika.getHours()%>:<%=aika.getMinutes()%> <%=aika.getDate()%>.<%=aika.getMonth()+1%>.<%=aika.getFullYear()%></mark></p>
                    </div>
                    <p><%-kommentti.viesti%></p>
                    </p>
                </div>
            <% }); %>
    </div>
        <div id="commentarea">
            <br>
                <form method="POST" action="/tallennakommentti">
                    <div class="form-group">
                        <input name="nimimerkki" class="form-control" id="nimiinput" placeholder="Nimimerkki">
                    </div>
                    <textarea id="textinput" name="kommenttiinput"></textarea>
                    <script>
                        CKEDITOR.replace( 'kommenttiinput' );
                    </script>
                    <input type="submit" style="margin-top:5px;" value="Vastaa keskusteluun" class="btn btn-secondary btn-lg">
                    <input type="hidden" name="keskusteluid" value="<%=id%>">
                </form>
        </div>

    </div>
    </div>

</body>
</html>